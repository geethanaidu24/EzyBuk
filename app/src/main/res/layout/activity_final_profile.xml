<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <include

        layout="@layout/activity_toolbar" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:elevation="2dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
       android:layout_above="@+id/footer"
        android:fillViewport="true"
        android:id="@+id/scrollView3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/name1"
                android:text="Name :"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/rlog"
                android:layout_marginTop="1dp"
                android:background="@drawable/rounded_border_editext"

                android:layout_below="@+id/name1"
                android:layout_alignParentLeft="true"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/pass"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/green"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/imageView4" />
                <View
                    android:id="@+id/sr1"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@+id/imageView4"
                    android:layout_marginTop="8dp"

                    android:background="@color/cred"
                    android:layout_toRightOf="@+id/imageView4" />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:drawableTint="@color/cred"
                    android:id="@+id/editText_profilename"
                    android:hint="Name"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/colorblack"
                    android:background="@drawable/edittext2"
                    android:layout_marginRight="2dp"
                    android:inputType="textEmailAddress"
                    android:layout_toRightOf="@+id/imageView4"
                    android:layout_toEndOf="@+id/imageView4" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No :"
                android:id="@+id/mobile1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/rlog"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/rlog1"
                android:layout_marginTop="1dp"
                android:background="@drawable/rounded_border_editext"

                android:layout_below="@+id/mobile1"
                android:layout_alignParentLeft="true"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/pass"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/green"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/imageView42" />
                <View
                    android:id="@+id/sr12"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@+id/imageView42"
                    android:layout_marginTop="8dp"

                    android:background="@color/cred"
                    android:layout_toRightOf="@+id/imageView42" />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"

                    android:id="@+id/editText_user2"
                    android:hint="Mobile No"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/colorblack"
                    android:background="@drawable/edittext2"
                    android:layout_marginRight="2dp"
                    android:inputType="textEmailAddress"
                    android:layout_toRightOf="@+id/imageView42"
                    android:layout_toEndOf="@+id/imageView42" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Of Birth: :"
                android:id="@+id/dateofbirth1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/rlog1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/rlog2"
                android:layout_marginTop="1dp"
                android:background="@drawable/rounded_border_editext"

                android:layout_below="@+id/dateofbirth1"
                android:layout_alignParentLeft="true"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/pass"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/green"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/imageView422" />
                <View
                    android:id="@+id/sr122"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@+id/imageView422"
                    android:layout_marginTop="8dp"

                    android:background="@color/cred"
                    android:layout_toRightOf="@+id/imageView422" />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"

                    android:id="@+id/editText_user22"
                    android:hint="Date Of Birth"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/colorblack"
                    android:background="@drawable/edittext2"
                    android:layout_marginRight="2dp"
                    android:inputType="textEmailAddress"
                    android:layout_toRightOf="@+id/imageView422"
                    android:layout_toEndOf="@+id/imageView422" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender :"
                android:id="@+id/gender1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/rlog2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/rlog3"
                android:layout_marginTop="1dp"
                android:background="@drawable/rounded_border_editext"

                android:layout_below="@+id/gender1"
                android:layout_alignParentLeft="true"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/radioGender"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/genderMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        />

                    <RadioButton
                        android:id="@+id/genderFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:text="Female" />

                </RadioGroup>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:id="@+id/email1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/rlog3"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/rlog4"
                android:layout_marginTop="1dp"
                android:background="@drawable/rounded_border_editext"

                android:layout_below="@+id/email1"
                android:layout_alignParentLeft="true"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/pass"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/green"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/imageView4222" />
                <View
                    android:id="@+id/sr1222"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_toEndOf="@+id/imageView4222"
                    android:layout_marginTop="8dp"

                    android:background="@color/cred"
                    android:layout_toRightOf="@+id/imageView4222" />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"

                    android:id="@+id/editText_user222"
                    android:hint="Email Address"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/colorblack"
                    android:background="@drawable/edittext2"
                    android:layout_marginRight="2dp"

                    android:layout_toRightOf="@+id/imageView4222"
                    android:layout_toEndOf="@+id/imageView4222" />

            </RelativeLayout>

        </RelativeLayout>
        </ScrollView>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE"/>
</RelativeLayout>



</RelativeLayout>